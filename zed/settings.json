// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "colorize_brackets": true,
  "indent_guides": {
    "coloring": "indent_aware",
    "background_coloring": "disabled",
  },
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": true,
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "collaboration_panel": {
    "dock": "right",
  },
  "outline_panel": {
    "dock": "left",
  },
  "icon_theme": "Catppuccin Latte",
  "restore_on_startup": "last_session",
  "theme": "Ayu Dark",
  "scrollbar": {
    "show": "always",
  },
  "minimap": {
    "show": "never",
  },
  "tabs": {
    "file_icons": true,
  },
  "show_whitespaces": "all",
  // "experimental.theme_overrides": {
  //   "terminal.ansi.green": "#3fb950ff",
  //   "terminal.ansi.bright_green": "#56d364ff",
  //   "terminal.ansi.dim_green": "#3fb950ff",
  //   "terminal.ansi.yellow": "#d29922ff",
  //   "terminal.ansi.bright_yellow": "#e3b341ff",
  //   "terminal.ansi.dim_yellow": "#d29922ff"
  // },
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15,
  },
  "autosave": "off",
  "base_keymap": "VSCode",
  "vim_mode": true,
  "vim": {
    "cursor_shape": {
      "normal": "hollow",
      "insert": "bar",
      "replace": "block",
      "visual": "underline",
    },
  },
  "cursor_blink": false,
  "relative_line_numbers": "enabled",
  "buffer_font_size": 13.0,
  "buffer_font_family": "Iosevka Term Extended",
  "ui_font_family": "Iosevka Aile",
  "use_smartcase_search": true,
  "show_wrap_guides": true,
  "wrap_guides": [80, 100],
  "soft_wrap": "editor_width",
  "terminal": {
    "font_family": "Iosevka Term Extended",
    "copy_on_select": true,
    "env": {
      "ZED": "1",
    },
  },
  "format_on_save": "on",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": false,
    "show_parameter_hints": true,
    "show_other_hints": true,
  },
  "auto_signature_help": false,
  "show_signature_help_after_edits": false,
  "ssh_connections": [
    {
      "host": "leospi",
      "projects": [
        {
          "paths": ["~/config"],
        },
      ],
    },
  ],
  "agent": {
    "default_model": {
      "provider": "google",
      "model": "gemini-3-flash-preview",
    },
  },
  "languages": {
    "HTML": {
      "tab_size": 2,
    },
    "JavaScript": {
      "formatter": [
        {
          "external": {
            "command": "eslint_d",
            "arguments": [
              "--stdin",
              "--stdin-filename",
              "{buffer_path}",
              "--fix-to-stdout",
            ],
          },
        },
        {
          "external": {
            "command": "prettierd",
            "arguments": ["--stdin-filepath", "{buffer_path}"],
          },
        },
      ],
    },
    "TypeScript": {
      "formatter": [
        {
          "external": {
            "command": "eslint_d",
            "arguments": [
              "--stdin",
              "--stdin-filename",
              "{buffer_path}",
              "--fix-to-stdout",
            ],
          },
        },
        {
          "external": {
            "command": "prettierd",
            "arguments": ["--stdin-filepath", "{buffer_path}"],
          },
        },
      ],
    },
    "Markdown": {
      "formatter": {
        "external": {
          "command": "prettierd",
          "arguments": ["--stdin-filepath", "{buffer_path}"],
        },
      },
    },
    "Vue.js": {
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.fixAll.eslint",
        },
        {
          "external": {
            "command": "prettierd",
            "arguments": ["--stdin-filepath", "{buffer_path}"],
          },
        },
      ],
    },
    "Astro": {
      "format_on_save": "on",
      "formatter": "prettier",
    },
    "Rust": {
      "format_on_save": "on",
      "formatter": [{ "language_server": { "name": "rust-analyzer" } }],
    },
    "LaTeX": {
      "format_on_save": "on",
      "formatter": [{ "language_server": { "name": "texlab" } }],
      "inlay_hints": {
        "enabled": false,
      },
    },
  },
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"],
        },
      },
    },
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayParameterNameHints": "all",
          "includeInlayParameterNameHintsWhenArgumentMatchesName": false,
          "includeInlayFunctionParameterTypeHints": true,
          "includeInlayVariableTypeHints": true,
          "includeInlayVariableTypeHintsWhenTypeMatchesName": false,
          "includeInlayPropertyDeclarationTypeHints": true,
          "includeInlayFunctionLikeReturnTypeHints": true,
          "includeInlayEnumMemberValueHints": true,
        },
      },
    },
    "rust-analyzer": {
      "initialization_options": {
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "useParameterNames": true,
            "enable": "skip_trivial",
          },
          "closureReturnTypeHints": {
            "enable": "always",
          },
        },
        "checkOnSave": true,
        "check": {
          "command": "clippy",
        },
      },
    },
    "texlab": {
      "settings": {
        "texlab": {
          // Disable latexindent due to it insisting on using tabs.
          "latexFormatter": "texlab",
          "latexindent": {
            "modifyLineBreaks": true,
          },
          "formatterLineLength": 80,
          "bibtexFormatter": "latexindent",
          "build": {
            "onSave": true,
            "executable": "tectonic",
            "args": [
              "-X",
              "compile",
              "%f",
              "--untrusted",
              "--synctex",
              "--keep-logs",
              "--keep-intermediates",
              "--outdir",
              "build",
            ],
            "pdfDirectory": "build",
            "auxDirectory": "build",
            "logDirectory": "build",
            "forwardSearchAfter": true,
          },
          "forwardSearch": {
            "executable": "/Applications/Skim.app/Contents/SharedSupport/displayline",
            // -g forces Skim to stay in the background
            "args": ["-g", "-r", "%l", "%p", "%f"],
          },
        },
      },
    },
  },
}
